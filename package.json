{
    "name": "tetris",
    "version": "0.0.0",
    "description": "Tetris clone.",
    "author": "Frederick Gnodtke",
    "license": "MIT",
    "scripts": {
        "build": "webpack",
        "start": "webpack-dev-server",
        "test": "TZ=UTC jest",
        "lint": "tslint --format stylish --project tsconfig.json"
    },
    "main": "./index.html",
    "jest": {
        "preset": "ts-jest",
        "collectCoverage": true,
        "moduleDirectories": [
            "node_modules",
            "src",
            "assets"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            ".ts": "ts-jest"
        },
        "coverageReporters": [
            "lcov",
            "text-summary"
        ],
        "testMatch": [
            "**/__tests__/test-*.ts"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": true
            }
        },
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/__tests__/"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts"
        ]
    },
    "devDependencies": {
        "@types/classnames": "^2.2.7",
        "@types/date-fns": "^2.6.0",
        "@types/jest": "^24.0.6",
        "@types/ramda": "^0.25.50",
        "@types/random-seed": "^0.3.3",
        "@types/react": "^16.8.3",
        "classnames": "^2.2.6",
        "css-loader": "^2.1.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^3.0.1",
        "jest": "^24.1.0",
        "json-loader": "^0.5.7",
        "node-sass": "^4.11.0",
        "resolve-url-loader": "^3.0.1",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3",
        "url-loader": "^1.1.2",
        "webpack": "^4.29.5",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.1.14"
    },
    "dependencies": {
        "date-fns": "^1.30.1",
        "firebase": "^5.8.4",
        "lodash-decorators": "^6.0.1",
        "mobx": "^5.9.0",
        "mobx-react": "^5.4.3",
        "peerjs": "^0.3.22",
        "ramda": "^0.26.1",
        "random-seed": "^0.3.0",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "tsdi": "^0.20.3"
    }
}
